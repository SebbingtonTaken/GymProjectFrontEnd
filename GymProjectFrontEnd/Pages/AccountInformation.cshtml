<head>
    <link rel="preload" href="./css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="./css/Login.css" asp-append-version="true" />
    <link rel="preload" href="./css/AccountInformation.css" asp-append-version="true" />
    <link rel="stylesheet" href="./css/AccountInformation.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js" asp-append-version="true"></script>
    <script src="~/js/Pages/AccountInformation.js" type="module"> </script>
    <script src="~/js/Pages/Measures.js" type="module"> </script>
</head>

<body>

