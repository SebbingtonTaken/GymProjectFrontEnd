@page
@model GymProjectFrontEnd.Pages.EmployeeManagementcshtmlModel
@{
}

<head>

    <link rel="preload" href="../CSS/style.css">
    <link rel="stylesheet" href="../CSS/style.css">
    <link rel="preload" href="../CSS/Login.css">
    <link rel="stylesheet" href="../CSS/Login.css">
    <link rel="preload" href="../CSS/AccountInformation.css">
    <link rel="stylesheet" href="../CSS/AccountInformation.css">
    <link rel="preload" href="../CSS/AdminManagement.css">
    <link rel="stylesheet" href="../CSS/AdminManagement.css">

</head>


<body>

            <H1>Gestión de empleados</H1>
            <p>Registra empleados y administra sus permisos fácilmente.</p>
            <div class="ButtonContainer ">
                <div class="Reservation register " id="register-emplyee">
                    <button onclick="openLoginPopup()">Registrar <br> empleado</button>
                </div>
                <div class="CheckSchedule " id="permissions-management">
                    <button onclick="openForgetPasswordPopup()">Editar permisos</button>
                </div>
            </div>
        </div>

        <div id="popup" class="popup">
            <div class="popup-content" id="popup-content">
                <span class="close" onclick="closePopup()">&times;</span>
            </div>
        </div>
    </header>

    <section class="permissions-management">
        <div class="container permission-container">
            <h2>Configuración de permisos de usuario</h2>
            <table id="employee-table">
                <thead>
                    <tr>
                        <th>Nombre del Empleado</th>
                        <th>Rol</th>
                        <th value="10">Visualizar pagos</th>
                        <th value="9">Gestión de citas de medición</th>
                        <th value="11">Aprobar pagos</th>
                        <th value="12">Gestión de tarifas</th>
                        <th value="13">Gestión de usuarios</th>
                        <th value="14">Gestión de empleados</th>
                        <th value="21">Gestión de rutinas</th>
                        <th value="22">Realizar mediciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Aquí se llenarán los empleados dinámicamente -->
                </tbody>
            </table>
            <div class="ButtonContainer">
                <div class="Reservation confirm" id="confirm-changes">
                    <button>Confirmar</button>
                </div>
                <div class="CheckSchedule" id="cancel-changes">
                    <button>Cancelar</button>
                </div>
            </div>
        </div>
    </section>


    <main>
        <div class="form-container">
            <h2>Registro de empleados</h2>
            <p>Ingresa los datos del empleado</p>
            <form id="registration-form">
                <div class="form-div">
                    <div class="first-row">
                        <div class="form-group">
                            <input class="login-input" type="text" id="name" placeholder="Ingresa el nombre">
                            <div class="error" id="name-error"></div>
                        </div>
                        <div class="form-group">
                            <input class="login-input" type="text" id="last-name" placeholder="Ingresa el apellido">
                            <div class="error" id="last-name-error"></div>
                        </div>
                        <div class="form-group">
                            <input class="login-input" type="date" id="birthdate" placeholder="Indica la fecha de nacimiento">
                            <div class="error" id="birthdate-error"></div>
                        </div>
                    </div>
                    <div class="second-row">
                        <div class="form-group">
                            <input class="login-input" type="text" id="dni" placeholder="Proporciona el DNI">
                            <div class="error" id="dni-error"></div>
                        </div>
                        <div class="form-group">
                            <input class="login-input" type="email" id="email" placeholder="Ingresa la dirección de correo">
                            <div class="error" id="email-error"></div>
                        </div>
                        <div class="form-group">
                            <select id="gender">
                                <option value="">Género: Selecciona tu género</option>
                                <option value="M">Masculino</option>
                                <option value="F">Femenino</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <div class="error" id="gender-error"></div>
                        </div>
                    </div>
                    <div class="third-row">
                        <div class="form-group">
                            <input class="login-input" type="text" id="address" placeholder="Ingresa el domicilio">
                            <div class="error" id="address-error"></div>
                        </div>
                        <div class="form-group">
                            <input class="login-input" type="text" id="phone-number" placeholder="Ingresa el teléfono">
                            <div class="error" id="phone-number-error"></div>
                        </div>
                        <div class="form-group">
                            <input class="login-input" type="password" id="password" placeholder="Ingresa la contraseña">
                            <div class="error" id="password-error"></div>
                        </div>
                    </div>
                    <div class="fourth-row">
                        <div class="form-group">
                            <select id="role">
                                <option value="">Rol: Selecciona el rol</option>
                                <option value="Recepcionista">Recepcionista</option>
                                <option value="Entrenador planta">Entrenador de planta</option>
                                <option value="Entrenador Personal">Entrenador personal</option>
                                <option value="Entrenador full">Entrenador completo</option>
                            </select>
                            <div class="error" id="role-error"></div>
                        </div>
                    </div>
                </div>
                <div class="form-button-container">
                    <button id="send-button" type="submit">Enviar</button>
                    <button id="reset-button" type="button" onclick="resetForm()">Cancelar</button>
                </div>
            </form>
        </div>
    </main>

    <section class="permissions-management">
        <div class="container permission-container schedule-changes">
            <h2>Crear horarios de empleado</h2>
            <p>Por favor inserte los siguientes datos:</p>
            <form id="schedule-form">
                <div class="form-div">
                        <div class="form-group schedule-form">
                            <select id="employee-select" class="login-input">
                                <option value="">Selecciona un empleado</option>
                            </select>
                            <div class="error" id="employee-error"></div>
                        </div>
                    <div class="form-group schedule-form">
                        <select id="month-select" class="login-input">
                            <option value="">Selecciona un mes</option>
                            <option value="1">Enero</option>
                            <option value="2">Febrero</option>
                            <option value="3">Marzo</option>
                            <option value="4">Abril</option>
                            <option value="5">Mayo</option>
                            <option value="6">Junio</option>
                            <option value="7">Julio</option>
                            <option value="8">Agosto</option>
                            <option value="9">Septiembre</option>
                            <option value="10">Octubre</option>
                            <option value="11">Noviembre</option>
                            <option value="12">Diciembre</option>
                        </select>
                        <div class="error" id="month-error"></div>
                    </div>
                    <div class="form-group schedule-form">
                        <select id="year-select" class="login-input">
                            <option value="">Selecciona un año </option>
                            <option value="2024">2024</option>
                            <option value="2025">2025</option>
                            <option value="2026">2026</option>
                            <option value="2027">2027</option>
                            <option value="2028">2028</option>
                        </select>
                        <div class="error" id="year-error"></div>
                    </div>
                    <div class="form-group schedule-form">
                        <select id="free-days-select" class="login-input" >
                            <option value="">Selecciona el dia libre</option>
                            <option value="1">Lunes</option>
                            <option value="2">Martes</option>
                            <option value="3">Miércoles</option>
                            <option value="4">Jueves</option>
                            <option value="5">Viernes</option>
                            <option value="6">Sábado</option>
                            <option value="7">Domingo</option>
                        </select>
                        <div class="error" id="free-days-error"></div>
                    </div>
                    <div class="form-group schedule-form">
                        <select id="start-time-select" class="login-input">
                            <option value="">Selecciona la hora de inicio</option>
                            ${Array.from({ length: 24 }, (_, i) => `
                            <option value="${i.toString().padStart(2, '0')}:00:00">${i.toString().padStart(2, '0')}:00:00</option>`).join('')}
                        </select>
                        <div class="error" id="start-time-error"></div>
                    </div>
                    <div class="form-group schedule-form">
                        <select id="end-time-select" class="login-input">
                            <option value="">Selecciona la hora de fin</option>
                            ${Array.from({ length: 24 }, (_, i) => `
                            <option value="${i.toString().padStart(2, '0')}:00:00">${i.toString().padStart(2, '0')}:00:00</option>`).join('')}
                        </select>
                        <div class="error" id="end-time-error"></div>
                    </div>
                </div>
                <div class="form-button-container schedule-button">
                    <button class="Reservation register" id="create-schedule-button" type="button">Crear Horario</button>
                </div>
            </form>
        </div>
    </section>



    <footer></footer>

    <div id="alertContainer" class="alert-container"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="./js/Pages/EmployeeManagement.js" type="module"> </script>

</body>
